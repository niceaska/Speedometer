<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="speedometer_default_style">

        <item name="color_low">@color/colorPrimaryDark</item>
        <item name="color_mid">@android:color/holo_orange_dark</item>
        <item name="color_high">@color/colorAccent</item>
        <item name="max_speed">400</item>
        <item name="color_arrow">@android:color/background_dark</item>
    </style>
</resources>
